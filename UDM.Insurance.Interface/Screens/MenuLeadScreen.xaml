                            </Viewbox>
                        </Grid>
                    </Viewbox>
                </Grid>
            </Grid>
        </Viewbox>

        <Viewbox VerticalAlignment="Bottom"
                 Stretch="Uniform">
            <Grid Width="1920">
                <Grid x:Name="DebugControl"
                      VerticalAlignment="Bottom"
                      Visibility="Hidden">
                    <Interface:DebugVersionControl />
                </Grid>
                <Grid x:Name="TestControl"
                      VerticalAlignment="Bottom"
                      Visibility="Hidden">
