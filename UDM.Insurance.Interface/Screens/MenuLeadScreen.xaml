                                                  Height="{DynamicResource INMenuButtonHeight}">
                                                <Image x:Name="imageAssign"
                                                       Source="pack://application:,,,/Resources/imgAssignLeads.png"
                                                       Style="{DynamicResource INMenuButtonImageStyle1}" />
                                                <TextBlock x:Name="labelAssign"
                                                           Style="{DynamicResource INSquareButtonText1}"
                                                           Text="Assign" />
                                            </Grid>
                                        </Canvas>
                                    </Button>

                                    <Button x:Name="btnPrint"
                                            Margin="0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Click="btnPrint_Click"
                                            Style="{DynamicResource INMenuButton}"
                                            TabIndex="0">
                                        <Button.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform />
                                                <SkewTransform />
                                                <RotateTransform />
                                                <TranslateTransform />
                                            </TransformGroup>
