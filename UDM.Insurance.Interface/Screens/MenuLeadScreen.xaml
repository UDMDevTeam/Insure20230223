                                     Grid.Row="1"
                                     Grid.Column="1"
                                     Width="590"
                                     Height="150"
                                     Margin="0,-45,20,0"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Top"
                                     Stretch="Uniform">
                                <Grid Width="590"
                                      Height="150"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top">

                                    <TextBlock x:Name="txtManagement"
                                               Style="{DynamicResource INMenuHeadingText1}"
                                               Text="M a n a g e m e n t" />

                                    <Path x:Name="lineManagement"
                                          Height="auto"
                                          Margin="200,20,0,0"
                                          VerticalAlignment="Top"
                                          Data="M3.9999844,3.9999905 L364.21344,3.9999905"
                                          Stretch="Uniform"
                                          Stroke="{DynamicResource BrandedBrushIN}"
                                          StrokeMiterLimit="2.75" />

                                    <StackPanel Margin="0,25,0,0"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                FlowDirection="LeftToRight"
                                                Orientation="Horizontal">
                                        <Grid>
                                            <Button x:Name="btnBack"
                                                    Width="18"
                                                    Height="18"
                                                    VerticalAlignment="Center"
                                                    Click="btnBack_Click"
                                                    Style="{StaticResource btnBack}" />
                                        </Grid>
                                        <Grid Width="24" />
                                        <Grid>
                                            <TextBlock x:Name="headerLeads"
                                                       VerticalAlignment="Center"
                                                       Style="{DynamicResource INMenuHeaderText1}"
                                                       Text="Leads" />
                                        </Grid>
                                    </StackPanel>

                                    <Button x:Name="btnImport"
                                            Margin="0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Click="btnImport_Click"
                                            Style="{DynamicResource INMenuButton}"
                                            TabIndex="0">
                                        <Button.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform />
                                                <SkewTransform />
                                                <RotateTransform />
                                                <TranslateTransform />
                                            </TransformGroup>
                                        </Button.RenderTransform>
                                        <Canvas Width="{DynamicResource INMenuButtonWidth}"
                                                Height="{DynamicResource INMenuButtonHeight}">
                                            <Grid Width="{DynamicResource INMenuButtonWidth}"
                                                  Height="{DynamicResource INMenuButtonHeight}">
                                                <Image x:Name="imageImport"
                                                       Source="pack://application:,,,/Resources/imgImport.png"
                                                       Style="{DynamicResource INMenuButtonImageStyle1}" />
                                                <TextBlock x:Name="labelImport"
                                                           Style="{DynamicResource INSquareButtonText1}"
                                                           Text="Import" />
                                            </Grid>
                                        </Canvas>
                                    </Button>

                                    <Button x:Name="btnAssign"
                                            Margin="0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Click="btnAssign_Click"
                                            Style="{DynamicResource INMenuButton}"
                                            TabIndex="0">
                                        <Button.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform />
                                                <SkewTransform />
                                                <RotateTransform />
                                                <TranslateTransform />
                                            </TransformGroup>
                                        </Button.RenderTransform>
                                        <Canvas Width="{DynamicResource INMenuButtonWidth}"
                                                Height="{DynamicResource INMenuButtonHeight}">
