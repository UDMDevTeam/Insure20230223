                             Grid.RowSpan="3"
                             Grid.Column="1"
                             Grid.ColumnSpan="2"
                             Margin="0"
                             Stretch="Uniform">
                        <Grid x:Name="grid"
                              Width="1267"
                              Height="624"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top">
