        <Viewbox VerticalAlignment="Top"
                 Stretch="Uniform">
            <Grid Width="1920">
                <Grid Width="24"
                      Height="24"
                      Margin="0,12,12,0"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top">
                    <Button x:Name="btnClose"
