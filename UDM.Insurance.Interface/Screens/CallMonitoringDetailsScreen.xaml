<Window
    x:Class="UDM.Insurance.Interface.Screens.CallMonitoringDetailsScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:business="clr-namespace:UDM.Insurance.Business;assembly=UDM.Insurance.Business"
    xmlns:controls="clr-namespace:Embriant.WPF.Controls;assembly=Embriant.WPF"
    xmlns:converters="clr-namespace:UDM.WPF.Converters;assembly=UDM.WPF"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:igWPF="http://infragistics.com/Editors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:usercontrols="clr-namespace:UDM.Insurance.Interface.Controls"
    Title="Call Monitoring Details Screen"
    Width="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width, Converter={converters:MathConverter}, ConverterParameter=x*0.750}"
    Height="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height, Converter={converters:MathConverter}, ConverterParameter=x*0.859}"
    AllowsTransparency="True"
    Background="Transparent"
    BorderThickness="0"
    DataContext="{Binding RelativeSource={RelativeSource Self}, Path=ScreenData}"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    ResizeMode="CanMinimize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Thickness x:Key="gridMargin">0,10,0,0</Thickness>
        <BorderGapMaskConverter x:Key="BorderGapMaskConverter" />
        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupBox}">
                        <Grid SnapsToDevicePixels="true">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="6" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="6" />
                            </Grid.RowDefinitions>
                            <Border
                                Name="Header"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                Padding="3,1,3,0">
                                <ContentPresenter
                                    ContentSource="Header"
                                    RecognizesAccessKey="true"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </Border>
                            <Border
                                Grid.Row="1"
                                Grid.RowSpan="3"
                                Grid.Column="0"
                                Grid.ColumnSpan="4"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" />
                            <Border
                                Grid.Row="1"
                                Grid.RowSpan="3"
                                Grid.Column="0"
                                Grid.ColumnSpan="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                                <Border.OpacityMask>
                                    <MultiBinding Converter="{StaticResource BorderGapMaskConverter}" ConverterParameter="7">
                                        <Binding ElementName="Header" Path="ActualWidth" />
                                        <Binding Path="ActualWidth" RelativeSource="{RelativeSource Self}" />
                                        <Binding Path="ActualHeight" RelativeSource="{RelativeSource Self}" />
                                    </MultiBinding>
                                </Border.OpacityMask>
                            </Border>
                            <ContentPresenter
                                Grid.Row="2"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Margin="{TemplateBinding Padding}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Viewbox Stretch="Uniform">

        <Border
            x:Name="BGRectangle"
            Width="1500"
            Height="950"
            Margin="0"
            Background="Black"
            BorderBrush="{StaticResource BrandedBrushIN}"
            BorderThickness="2"
            CornerRadius="10">
            <Border.Style>
                <Style TargetType="{x:Type Border}" />
            </Border.Style>

            <Grid x:Name="grdMain">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />

                </Grid.ColumnDefinitions>

                <GroupBox
                    x:Name="gbBankingDetails"
                    Grid.Row="2"
                    Grid.RowSpan="7"
                    Grid.Column="1"
                    Grid.ColumnSpan="15"
                    Margin="0,0,7,0"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="{StaticResource BrandedBrushIN}"
                    Header="Banking Details">
                    <StackPanel>
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type Grid}">
                                <Setter Property="Margin" Value="{StaticResource gridMargin}" />
                            </Style>
                        </StackPanel.Resources>
                        <!--<TextBlock x:Name="lblWasMoneyBackVsVoucherBenefitsExplainedCorrectly"
                           Grid.Row="3"
                           Grid.Column="1"
                           Grid.ColumnSpan="14"
                           Margin="10,0,0,0"
                           VerticalAlignment="Top"
                           Style="{StaticResource INLabelText2}"
                           Text="Was the 50% money back option versus the 100% voucher benefits explained correctly?" />
                <CheckBox x:Name="chkWasMoneyBackVsVoucherBenefitsExplainedCorrectly"
                          Grid.Row="3"
                          Grid.Column="14"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          IsChecked="{Binding WasMoneyBackVsVoucherBenefitsExplainedCorrectly}"
                          Style="{StaticResource INCheckboxStyle}" />-->

                        <Grid>
                            <TextBlock
                                x:Name="lblWasClearYesGivenInSalesQuestion"
                                Grid.Row="3"
                                Grid.Column="1"
                                Grid.ColumnSpan="14"
                                Margin="10,0,0,0"
                                VerticalAlignment="Top"
                                Style="{StaticResource INLabelText2}"
                                Text="Was a clear yes given in the sales question?" />
                            <CheckBox
                                x:Name="chkWasClearYesGivenInSalesQuestion"
                                Grid.Row="3"
                                Grid.Column="14"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                IsChecked="{Binding WasClearYesGivenInSalesQuestion}"
                                Style="{StaticResource INCheckboxStyle}" />
                        </Grid>

                        <Grid>
                            <TextBlock
                                x:Name="lblIsBankingDetailsCapturedCorrectly"
                                Grid.Row="4"
                                Grid.Column="1"
                                Grid.ColumnSpan="13"
                                Margin="10,0,0,0"
                                VerticalAlignment="Top"
                                Style="{StaticResource INLabelText2}"
                                Text="Were the banking details captured correctly on Insure?" />
                            <CheckBox
                                x:Name="chkIsBankingDetailsCapturedCorrectly"
                                Grid.Row="4"
                                Grid.Column="14"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                IsChecked="{Binding IsBankingDetailsCapturedCorrectly}"
                                Style="{StaticResource INCheckboxStyle}" />
                        </Grid>
                        <Grid>
                            <TextBlock
                                x:Name="lblWasAccountVerified"
                                Grid.Row="5"
                                Grid.Column="1"
                                Grid.ColumnSpan="13"
                                Margin="10,0,0,0"
                                VerticalAlignment="Top"
                                Style="{StaticResource INLabelText2}"
                                Text="Was the account verified?" />
                            <CheckBox
                                x:Name="chkWasAccountVerified"
                                Grid.Row="5"
                                Grid.Column="14"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                IsChecked="{Binding WasAccountVerified}"
                                Style="{StaticResource INCheckboxStyle}" />
                        </Grid>
                        <Grid>
                            <TextBlock
                                x:Name="lblWasDebitDateConfirmed"
                                Grid.Row="6"
                                Grid.Column="1"
                                Grid.ColumnSpan="13"
                                Margin="10,0,0,0"
                                VerticalAlignment="Top"
                                Style="{StaticResource INLabelText2}"
                                Text="Was the debit date confirmed?" />
                            <CheckBox
                                x:Name="chkWasDebitDateConfirmed"
                                Grid.Row="6"
                                Grid.Column="14"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                IsChecked="{Binding WasDebitDateConfirmed}"
                                Style="{StaticResource INCheckboxStyle}" />
                        </Grid>
                        <Grid>
                            <TextBlock
                                x:Name="lblIsAccountInClientsName"
                                Grid.Row="7"
                                Grid.Column="1"
                                Grid.ColumnSpan="13"
                                Margin="10,0,0,0"
                                VerticalAlignment="Top"
                                Style="{StaticResource INLabelText2}"
                                Text="Is the account in the client's name?" />
                            <CheckBox
                                x:Name="chkIsAccountInClientsName"
                                Grid.Row="7"
                                Grid.Column="14"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                IsChecked="{Binding IsAccountInClientsName}"
                                Style="{StaticResource INCheckboxStyle}" />
                        </Grid>
                        <Grid>
                            <TextBlock
                                x:Name="lblDoesClientHaveSigningPower"
                                Grid.Row="8"
                                Grid.Column="1"
                                Grid.ColumnSpan="13"
                                Margin="10,0,0,0"
                                VerticalAlignment="Top"
                                Style="{StaticResource INLabelText2}"
                                Text="If not, does he/she have signing power?" />
                            <CheckBox
                                x:Name="chkDoesClientHaveSigningPower"
                                Grid.Row="8"
                                Grid.Column="14"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                IsChecked="{Binding DoesClientHaveSigningPower}"
                                Style="{StaticResource INCheckboxStyle}" />
                        </Grid>
                        <Grid>
                            <TextBlock
                                x:Name="lblWasDebiCheckProcessExplainedCorrectly"
                                Grid.Row="9"
                                Grid.Column="1"
                                Grid.ColumnSpan="13"
                                Margin="10,0,0,0"
                                VerticalAlignment="Top"
                                Style="{StaticResource INLabelText2}"
                                Text="Was the Debi-Check process explained to the client correctly?" />
                            <CheckBox
                                x:Name="chkWasDebiCheckProcessExplainedCorrectly"
                                Grid.Row="9"
                                Grid.Column="14"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                IsChecked="{Binding WasDebiCheckProcessExplainedCorrectly}"
                                Style="{StaticResource INCheckboxStyle}" />
                        </Grid>
                        <!--  Groupbox ends here  -->
                    </StackPanel>
                </GroupBox>

                <GroupBox
                    x:Name="gbPolicyDetailsOverview"
                    Grid.Row="2"
                    Grid.RowSpan="7"
                    Grid.Column="17"
                    Grid.ColumnSpan="15"
                    Margin="0"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="{StaticResource BrandedBrushIN}"
                    Header="Policy Details Overview" />

                <TextBlock
                    x:Name="lblRefNo"
                    Grid.Row="3"
                    Grid.Column="17"
                    Grid.ColumnSpan="5"
                    Margin="10,0,0,0"
                    VerticalAlignment="Top"
                    Style="{StaticResource INLabelText2}"
                    Text="Reference Number" />
                <TextBlock
                    x:Name="tbRefNo"
                    Grid.Row="3"
                    Grid.Column="22"
                    Grid.ColumnSpan="6"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    Foreground="Silver"
                    Style="{StaticResource INLabelText2}"
                    Text="{Binding RefNo}"
                    TextWrapping="NoWrap" />
                <TextBlock
                    x:Name="lblHasPolicyBeenBumpedUp"
                    Grid.Row="4"
                    Grid.Column="17"
                    Grid.ColumnSpan="7"
                    Margin="10,0,0,0"
                    VerticalAlignment="Top"
                    Style="{StaticResource INLabelText2}"
                    Text="Bumped Up?" />
                <TextBlock
                    x:Name="tbHasPolicyBeenBumpedUp"
                    Grid.Row="4"
                    Grid.Column="22"
                    Grid.ColumnSpan="1"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    Foreground="Silver"
                    Style="{StaticResource INLabelText2}"
                    Text="{Binding HasPolicyBeenBumpedUp}"
                    TextWrapping="NoWrap" />
                <TextBlock
                    x:Name="lblIncludesLA2Cover"
                    Grid.Row="4"
                    Grid.Column="25"
                    Grid.ColumnSpan="5"
                    Margin="0"
                    VerticalAlignment="Top"
                    Style="{StaticResource INLabelText2}"
                    Text="Includes LA2 Cover?" />
                <TextBlock
                    x:Name="tbIncludesLA2Cover"
                    Grid.Row="4"
                    Grid.Column="30"
                    Grid.ColumnSpan="1"
                    Margin="0,0,0,0"
                    VerticalAlignment="Top"
                    Foreground="Silver"
                    Style="{StaticResource INLabelText2}"
                    Text="{Binding HasPolicyBeenBumpedUp}"
                    TextWrapping="NoWrap" />
                <TextBlock
                    x:Name="lblBank"
                    Grid.Row="5"
                    Grid.Column="17"
                    Grid.ColumnSpan="5"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource INLabelText2}"
                    Text="Bank / Branch Code / Debit Day" />
                <controls:EmbriantComboBox
                    x:Name="cmbBank"
                    Grid.Row="5"
                    Grid.Column="22"
                    Grid.ColumnSpan="4"
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    PreviewKeyDown="EmbriantComboBox_PreviewKeyDown"
                    SelectedValue="{Binding LeadApplicationScreenData.BankDetailsData.BankID}"
                    SelectionChanged="cmbBank_SelectionChanged"
                    Style="{StaticResource cmbINLA}"
                    TabIndex="0" />
                <controls:EmbriantComboBox
                    x:Name="cmbBankBranch"
                    Grid.Row="5"
                    Grid.Column="26"
                    Grid.ColumnSpan="4"
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    PreviewKeyDown="EmbriantComboBox_PreviewKeyDown"
                    SelectedValue="{Binding LeadApplicationScreenData.BankDetailsData.BankBranchCodeID}"
                    Style="{StaticResource cmbINLA}"
                    TabIndex="1" />
                <igWPF:XamMaskedEditor
                    x:Name="medDODebitDay"
                    Grid.Row="5"
                    Grid.Column="30"
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    GotFocus="xamEditor_GotFocus"
                    Mask="{}{number:1-30}"
                    PromptChar=""
                    Style="{StaticResource medINLA}"
                    TabIndex="2"
                    Text="{Binding LeadApplicationScreenData.BankDetailsData.DebitDay, TargetNullValue={x:Static sys:String.Empty}}">
                    <igWPF:XamMaskedEditor.ValueConstraint>
                        <igWPF:ValueConstraint MinInclusive="1" />
                    </igWPF:XamMaskedEditor.ValueConstraint>
                </igWPF:XamMaskedEditor>

                <TextBlock
                    x:Name="lblDOAccountNumber"
                    Grid.Row="6"
                    Grid.Column="17"
                    Grid.ColumnSpan="5"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource INLabelText2}"
                    Text="Acc Type &amp; Acc Number" />
                <igWPF:XamMaskedEditor
                    x:Name="medAccountNumber"
                    Grid.Row="6"
                    Grid.Column="25"
                    Grid.ColumnSpan="5"
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    EditModeValidationError="medAccountNumber_OnEditModeValidationError"
                    GotFocus="xamEditor_GotFocus"
                    IsEnabled="True"
                    Mask="{}{char:12:0-9}"
                    PromptChar=""
                    TabIndex="4"
                    Text="{Binding LeadApplicationScreenData.BankDetailsData.AccountNumber}"
                    TextChanged="medAccountNumber_TextChanged">
                    <igWPF:XamMaskedEditor.ValueConstraint>
                        <igWPF:ValueConstraint Nullable="False" RegexPattern="" />
                    </igWPF:XamMaskedEditor.ValueConstraint>
                    <igWPF:XamMaskedEditor.Style>
                        <Style BasedOn="{StaticResource medINLA}" TargetType="{x:Type igWPF:XamMaskedEditor}">
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsValueValid, ElementName=medDOAccountNumber}" Value="False" />
                                        <Condition Binding="{Binding AppData.IsLeadLoaded}" Value="True" />
                                        <Condition Binding="{Binding AppData.CampaignGroup, Converter={StaticResource EnumCompareConverter}, ConverterParameter={x:Static business:lkpINCampaignGroup.Rejuvenation}}" Value="False" />
                                        <Condition Binding="{Binding AppData.CampaignGroup, Converter={StaticResource EnumCompareConverter}, ConverterParameter={x:Static business:lkpINCampaignGroup.Defrosted}}" Value="False" />
                                        <Condition Binding="{Binding AppData.CampaignGroup, Converter={StaticResource EnumCompareConverter}, ConverterParameter={x:Static business:lkpINCampaignGroup.ReDefrost}}" Value="False" />
                                        <Condition Binding="{Binding AppData.CampaignGroup, Converter={StaticResource EnumCompareConverter}, ConverterParameter={x:Static business:lkpINCampaignGroup.Reactivation}}" Value="False" />
                                        <Condition Binding="{Binding AppData.CampaignType, Converter={StaticResource EnumCompareConverter}, ConverterParameter={x:Static business:lkpINCampaignType.IGCancer}}" Value="False" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="BorderBrush" Value="Red" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </igWPF:XamMaskedEditor.Style>
                </igWPF:XamMaskedEditor>
                <controls:EmbriantComboBox
                    x:Name="cmbAccountType"
                    Grid.Row="6"
                    Grid.Column="22"
                    Grid.ColumnSpan="3"
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    PreviewKeyDown="EmbriantComboBox_PreviewKeyDown"
                    SelectedValue="{Binding LeadApplicationScreenData.BankDetailsData.AccountTypeID}"
                    Style="{StaticResource cmbINLA}"
                    TabIndex="3" />

                <Button
                    x:Name="btnVerifyAccNum"
                    Grid.Row="6"
                    Grid.RowSpan="2"
                    Grid.Column="30"
                    Grid.ColumnSpan="2"
                    Width="Auto"
                    Height="Auto"
                    Margin="0,0,42,38"
                    Background="Black"
                    BorderBrush="Black"
                    Click="btnVerifyAccNum_Click"
                    IsTabStop="True"
                    RenderTransformOrigin="0.5,0.5"
                    TabIndex="5"
                    ToolTip="Verify Branch and Account Number">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Path=LeadApplicationScreenData.BankDetailsData.BankBranchCodeID, Converter={StaticResource IsNullConverter}}" Value="True" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="IsEnabled" Value="False" />
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Path=LeadApplicationScreenData.BankDetailsData.AccountNumber, Converter={StaticResource IsNullConverter}}" Value="True" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="IsEnabled" Value="False" />
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding LeadApplicationScreenData.BankDetailsData.AccountNumber}" Value="" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="IsEnabled" Value="False" />
                                </MultiDataTrigger>
                            </Style.Triggers>

                            <Setter Property="FontSize" Value="16" />
                            <Setter Property="FontWeight" Value="600" />
                            <Setter Property="Foreground" Value="{DynamicResource BrandedBrushIN}" />
                            <Setter Property="VerticalAlignment" Value="Top" />
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Setter Property="Margin" Value="0,12,12,0" />
                            <Setter Property="Height" Value="24" />
                            <Setter Property="Width" Value="24" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border
                                            x:Name="ButtonBorder"
                                            Background="Transparent"
                                            BorderBrush="#BBFFFFFF"
                                            BorderThickness="0"
                                            CornerRadius="20"
                                            RenderTransformOrigin="0.5,0.5">
                                            <Grid>
                                                <ContentPresenter
                                                    Margin="0,0.5,0,0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsKeyboardFocused" Value="true">
                                                <!--  <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#11FFFFFF" />  -->
                                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FF000000" />
                                            </Trigger>
                                            <!--
                            <Trigger Property="IsDefaulted" Value="true">
                            <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="{DynamicResource BrandedBrushIN}" />
                            <Setter TargetName="ButtonBorder" Property="Background" Value="#FFF" />
                            </Trigger>
                                            -->
                                            <Trigger Property="IsMouseOver" Value="true">
                                                <!--  <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="{DynamicResource BrandedBrushIN}" />  -->
                                                <Setter TargetName="ButtonBorder" Property="Background" Value="{DynamicResource BrandedBrushIN_light}" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="true">
                                                <Setter TargetName="ButtonBorder" Property="Background" Value="{StaticResource BrandedBrushIN_dark}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <Viewbox>
                        <Grid>
                            <!--<Grid Name="backgroundGrid"
                                                              Width="256"
                                                              Height="256"
                                                              Visibility="Collapsed" />-->
                            <Path
                                Width="200"
