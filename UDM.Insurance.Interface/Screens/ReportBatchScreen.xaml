                    <TextBlock
                        x:Name="lblCombineUL"
                        Grid.Row="3"
                        Grid.Column="10"
                        Grid.ColumnSpan="6"
                        Margin="2,0,0,0"
                        VerticalAlignment="Bottom"
                        Style="{DynamicResource INLabelText2}"
                        Text="Combine UL" />
                    <CheckBox
                        Name="chkCombineUL"
                        Grid.Row="3"
                        Grid.Column="14"
                        Margin="0,27,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        IsChecked="{Binding CombineUL}" />

                    <TextBlock
                        x:Name="lblSalesConversion"
                        Grid.Row="3"
                        Grid.Column="15"
                        Grid.ColumnSpan="6"
                        Margin="0,0,0,24"
                        VerticalAlignment="Top"
                        Style="{DynamicResource INLabelText2}"
                        Text="Sales Conversion Report"
                        Visibility="Collapsed" />
                    <CheckBox
                        Name="chkSalesConversion"
                        Grid.Row="3"
                        Grid.Column="20"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        IsChecked="{Binding SalesConversionPerBatch}"
                        Visibility="Collapsed" />

                    <TextBlock
                        x:Name="lblContactsConversion"
                        Grid.Row="3"
                        Grid.Column="15"
                        Grid.ColumnSpan="6"
                        VerticalAlignment="Bottom"
                        Style="{DynamicResource INLabelText2}"
                        Text="Contacts Conversion Report"
                        Visibility="Collapsed" />
