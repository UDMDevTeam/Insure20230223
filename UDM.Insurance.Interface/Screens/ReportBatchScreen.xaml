                        Style="{DynamicResource cmbINHighlightBorder}"
                        TabIndex="0" />
                    <TextBlock
                        x:Name="lblCampaigns_Copy"
                        Grid.Row="2"
                        Grid.Column="2"
                        Grid.ColumnSpan="3"
                        Margin="2,0,0,17"
                        VerticalAlignment="Bottom"
