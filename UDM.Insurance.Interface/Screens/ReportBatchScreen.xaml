                    <Popup
                        Name="Popup1"
                        Grid.RowSpan="9"
                        Grid.ColumnSpan="8"
                        Width="700"
                        Height="500"
                        Margin="-69,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        IsOpen="False"
                        PlacementTarget="{Binding ElementName=chkPopupShow}"
                        StaysOpen="False">


                        <Grid Margin="0,-10,0,-9" Background="Black">
                            <Rectangle
                                x:Name="BGRectanglePopup"
                                Margin="0,10"
                                Fill="Black"
                                RadiusX="12"
                                RadiusY="12"
                                StrokeThickness="2">
                                <Rectangle.Stroke>
                                    <SolidColorBrush Color="{DynamicResource BrandedColourIN}" />
                                </Rectangle.Stroke>
                            </Rectangle>
                            <TextBlock
                                x:Name="lblCampaign"
                                Margin="29,0,0,405"
                                VerticalAlignment="Bottom"
                                Style="{DynamicResource INLabelText2}"
                                Text="Campaign" />
                            <Button
                                x:Name="btnPopupMark"
                                Width="131"
                                Height="33"
                                Margin="0,0,30,39"
