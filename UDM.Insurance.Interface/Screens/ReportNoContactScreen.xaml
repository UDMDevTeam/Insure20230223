                        </Viewbox>
                    -->
                    <CheckBox x:Name="DiaryCheckBox"
                              Grid.Column="11"
                              Grid.Row="5"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center">
                        
                    </CheckBox>

                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="12"
                        Grid.ColumnSpan="4"
                        VerticalAlignment="Center"
                        Style="{DynamicResource INLabelText2}"
                        Text="Include Diaries"
                        TextWrapping="NoWrap"
                        Visibility="Visible" />

                    <CheckBox x:Name="ShortPageCheckBox"
                              Grid.Column="11"
                              Grid.Row="6"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Checked="ShortPageCheckBox_Checked"
                              Unchecked="ShortPageCheckBox_Unchecked">

                    </CheckBox>

                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="12"
                        Grid.ColumnSpan="4"
                        VerticalAlignment="Center"
                        Style="{DynamicResource INLabelText2}"
                        Text="Condensed Report"
                        TextWrapping="NoWrap"
                        Visibility="Visible" />

                    <Button
                        x:Name="btnReport"
                        Grid.Row="15"
                        Grid.Column="22"
                        Grid.ColumnSpan="4"
                        Margin="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Click="btnReport_Click"
                        Content="Report"
                        Style="{DynamicResource INFlatButton}"
                        TabIndex="0" />

                </Grid>
            </Viewbox>
        </Border>
    </Border>

</src:BaseControl>
