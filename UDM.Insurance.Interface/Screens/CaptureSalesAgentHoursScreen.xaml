<src:BaseControl
    x:Class="UDM.Insurance.Interface.Screens.CaptureSalesAgentHoursScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:igWPF="http://schemas.infragistics.com/xaml/wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:src="clr-namespace:Embriant.WPF.Controls;assembly=Embriant.WPF"
    Width="1200"
    Height="750"
    Margin="0"
    Background="{x:Null}"
    Loaded="BaseControl_Loaded"
    mc:Ignorable="d">

    <src:BaseControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily" Value="/UDM.Blush.Interface;component/Fonts/#Century Gothic" />
        </Style>

    </src:BaseControl.Resources>

    <Canvas
        x:Name="LayoutRoot"
        Background="{x:Null}"
        FocusManager.FocusedElement="{Binding ElementName=medReference}">
        <Rectangle
            x:Name="BGRectangle"
            Canvas.Left="1"
            Width="1200"
            Height="750"
            Margin="0"
            Fill="Black"
            RadiusX="15"
            RadiusY="15"
            Stroke="#FF7FBEF5"
            StrokeThickness="2" />
        <Button
            x:Name="buttonClose"
            Canvas.Left="1164"
            Canvas.Top="12"
            Click="buttonClose_Click"
            Style="{DynamicResource INCloseButton}"
            TabIndex="3" />
        <Viewbox x:Name="Body">
            <Grid Width="1200" Height="750">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <TextBlock
                    x:Name="headingLeadDetails"
                    Grid.Row="1"
                    Grid.Column="2"
                    Grid.ColumnSpan="8"
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Style="{DynamicResource INPageHeadingText1}"
                    Text="Capture Sales Agent Overtime Hours" />
                <Path
                    Grid.Row="1"
                    Grid.Column="2"
                    Grid.ColumnSpan="8"
                    Margin="0,0,36,0"
                    Data="M372,132 L609.00475,132"
                    Stretch="Fill"
                    Stroke="#FFFDF9F9" />

                <StackPanel
                    Grid.Row="2"
                    Grid.RowSpan="5"
                    Grid.Column="2"
                    Grid.ColumnSpan="10"
                    Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            x:Name="lblSelectAgent"
                            Width="180"
                            Margin="0,5,0,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Style="{DynamicResource INLabelText2}"
                            Text="Agent Name" />
                        <src:EmbriantComboBox
                            x:Name="cmbAgents"
                            Width="320"
                            Margin="0,0,0,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Normal"
                            SelectionChanged="cmbAgents_SelectionChanged"
                            Style="{DynamicResource cmbIN}"
                            TabIndex="0" />
                    </StackPanel>
                    <Grid Height="20" Visibility="Collapsed" />
                    <StackPanel Orientation="Horizontal" Visibility="Collapsed">
                        <TextBlock
                            x:Name="lblCampaign"
                            Width="180"
                            Margin="0,5,0,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Style="{DynamicResource INLabelText2}"
                            Text="Campaign" />
                        <src:EmbriantComboBox
                            x:Name="cmbCampaigns"
                            Width="320"
                            Margin="0,0,0,0"
                            VerticalAlignment="Top"
                            SelectionChanged="cmbCampaigns_SelectionChanged"
                            Style="{DynamicResource cmbIN}"
                            TabIndex="0" />
                    </StackPanel>
                    <Grid Height="20" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            x:Name="lblDate"
                            Width="180"
                            Margin="0,5,0,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Style="{DynamicResource INLabelText2}"
                            Text="Date" />
                        <igWPF:XamDateTimeEditor
                            x:Name="dteDate"
                            Width="320"
                            Margin="0,0,0,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Normal"
                            Style="{StaticResource INXamDateTimeEditorStyle1}"
                            TabIndex="0"
                            ValueChanged="dteDate_ValueChanged" />
                    </StackPanel>
                    <Grid Height="20" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            x:Name="lblShiftType"
                            Width="180"
                            Margin="0,5,0,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Style="{DynamicResource INLabelText2}"
                            Text="Shift Type" />
                        <src:EmbriantComboBox
                            x:Name="cmbShiftType"
                            Width="320"
                            Margin="0,0,0,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Normal"
                            SelectionChanged="cmbShiftType_SelectionChanged"
                            Style="{DynamicResource cmbIN}"
                            TabIndex="0" />
                    </StackPanel>
                </StackPanel>

                <StackPanel
                    Grid.Row="8"
                    Grid.RowSpan="6"
                    Grid.Column="2"
                    Grid.ColumnSpan="10"
                    Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            x:Name="lblDescription"
                            Width="180"
                            Margin="0,5,0,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Style="{DynamicResource INLabelText2}"
                            Text="Description" />
                        <TextBlock
                            x:Name="lblDescriptionText"
                            Margin="0,5,0,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="Gray"
                            Style="{DynamicResource INLabelText2}"
                            Text="Description" />
                    </StackPanel>
                    <Grid Height="20" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            x:Name="lblMorningShift"
                            Width="180"
                            Margin="0,5,0,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Style="{DynamicResource INLabelText2}"
                            Text="Morning Overtime" />
                        <igWPF:XamDateTimeEditor
                            x:Name="dteMorningShiftStartTime"
                            Width="100"
                            Margin="0,0,0,0"
                            VerticalAlignment="Top"
                            Style="{DynamicResource INXamDateTimeEditorStyle2}"
                            TabIndex="0"
                            Visibility="Visible" />
                        <TextBlock
                            x:Name="lblToMorning"
                            Margin="20,5,20,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Style="{DynamicResource INLabelText2}"
                            Text="to" />
                        <igWPF:XamDateTimeEditor
                            x:Name="dteMorningShiftEndTime"
                            Width="100"
                            Margin="0,0,0,0"
                            VerticalAlignment="Top"
                            Style="{DynamicResource INXamDateTimeEditorStyle2}"
                            TabIndex="0"
                            Visibility="Visible" />
                    </StackPanel>
                    <Grid Height="20" />
                    <StackPanel Orientation="Horizontal" Visibility="Collapsed">
                        <TextBlock
                            x:Name="lblNormalShift"
                            Width="180"
                            Margin="0,5,0,0"
                            VerticalAlignment="Top"
                            FontSize="18.667"
                            FontWeight="Bold"
                            Style="{DynamicResource INLabelText2}"
                            Text="Normal Shift" />
                        <igWPF:XamDateTimeEditor
                            x:Name="dteNormalShiftStartTime"
                            Width="100"
                            Margin="0,0,0,0"
                            VerticalAlignment="Top"
                            Style="{DynamicResource INXamDateTimeEditorStyle2}"
                            TabIndex="0"
                            Visibility="Visible" />
                        <TextBlock
                            x:Name="lblToNormal"
                            Margin="20,5,20,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Style="{DynamicResource INLabelText2}"
                            Text="to" />
                        <igWPF:XamDateTimeEditor
                            x:Name="dteNormalShiftEndTime"
                            Width="100"
                            Margin="0,0,0,0"
                            VerticalAlignment="Top"
                            Style="{DynamicResource INXamDateTimeEditorStyle2}"
                            TabIndex="0"
                            Visibility="Visible" />
                    </StackPanel>
                    <Grid Height="20" Visibility="Collapsed" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            x:Name="lblEveningShift"
                            Width="180"
                            Margin="0,5,0,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Style="{DynamicResource INLabelText2}"
                            Text="Evening Overtime" />
                        <igWPF:XamDateTimeEditor
                            x:Name="dteEveningShiftStartTime"
                            Width="100"
                            Margin="0,0,0,0"
                            VerticalAlignment="Top"
                            Style="{DynamicResource INXamDateTimeEditorStyle2}"
                            TabIndex="0"
                            Visibility="Visible" />
                        <TextBlock
                            x:Name="lblToEvening"
                            Margin="20,5,20,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Style="{DynamicResource INLabelText2}"
                            Text="to" />
                        <igWPF:XamDateTimeEditor
                            x:Name="dteEveningShiftEndTime"
                            Width="100"
                            Margin="0,0,0,0"
                            VerticalAlignment="Top"
                            Style="{DynamicResource INXamDateTimeEditorStyle2}"
                            TabIndex="0"
                            Visibility="Visible" />
                    </StackPanel>
                    <Grid Height="12" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            x:Name="lblWeekend"
                            Width="180"
                            Margin="0,5,0,0"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Style="{DynamicResource INLabelText2}"
                            Text="Weekend / Public Holiday Overtime" />
                        <igWPF:XamDateTimeEditor
                            x:Name="dteWeekendPublicHolidayShiftStartTime"
                            Width="100"
                            Margin="0,8,0,0"
                            VerticalAlignment="Top"
                            Style="{DynamicResource INXamDateTimeEditorStyle2}"
                            TabIndex="0"
                            Visibility="Visible" />
                        <TextBlock
                            x:Name="lblToWeekend"
                            Margin="20,13,20,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            FontSize="18"
                            FontWeight="Bold"
                            Style="{DynamicResource INLabelText2}"
                            Text="to" />
                        <igWPF:XamDateTimeEditor
                            x:Name="dteWeekendPublicHolidayShiftEndTime"
                            Width="100"
                            Margin="0,8,0,0"
                            VerticalAlignment="Top"
                            Style="{DynamicResource INXamDateTimeEditorStyle2}"
                            TabIndex="0"
                            Visibility="Visible" />
                    </StackPanel>
                </StackPanel>

                <TextBlock
                    x:Name="lblEditMode"
                    Grid.Row="9"
                    Grid.RowSpan="2"
                    Grid.Column="13"
                    Grid.ColumnSpan="5"
                    Width="250"
                    Height="60"
                    Margin="0,0,0,30"
                    VerticalAlignment="Bottom"
                    FontSize="18"
                    FontWeight="Bold"
                    Style="{DynamicResource INLabelText2}"
                    Text="You are in Edit Mode"
                    Visibility="Collapsed" />

                <Button
                    x:Name="btnStopEditing"
                    Grid.Row="7"
                    Grid.Column="16"
                    Grid.ColumnSpan="3"
                    Width="Auto"
                    Height="Auto"
                    Margin="22,1,10,13"
                    Click="btnStopEditing_Click"
                    Content="Stop Editing"
                    DataContext="{Binding}"
                    Style="{DynamicResource INFlatButton}"
                    TabIndex="2"
                    Visibility="Collapsed" />

                <Button
                    x:Name="btnSave"
                    Grid.Row="13"
                    Grid.Column="19"
                    Grid.ColumnSpan="4"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="btnSave_Click"
                    Content="Save"
                    DataContext="{Binding}"
                    Style="{DynamicResource INFlatButton}"
                    TabIndex="2" />

                <TextBlock
                    x:Name="lblAgent"
                    Grid.Row="13"
                    Grid.Column="2"
                    Grid.ColumnSpan="5"
                    Width="450"
                    Height="25"
                    Margin="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    FontSize="18.667"
                    Foreground="#FFDFA1B0"
                    TextWrapping="Wrap" />

                <TextBlock
                    x:Name="lblIsRedeemedHours"
                    Grid.Row="6"
                    Grid.Column="2"
                    Grid.ColumnSpan="7"
                    Margin="0"
                    VerticalAlignment="Top"
                    FontSize="18.667"
                    FontWeight="Bold"
                    Style="{DynamicResource INLabelText2}"
                    Text="Are these hours captured for a redeemed gift batch?"
                    Visibility="Hidden" />
                <RadioButton
                    x:Name="rbIsRedeemedYes"
                    Grid.Row="6"
                    Grid.Column="8"
                    Margin="0,2,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    GroupName="rbgRedeemedGiftHours"
                    IsChecked="False"
                    Style="{StaticResource INRadioButton}"
                    Visibility="Hidden" />
                <TextBlock
                    x:Name="lblIsRedeemedHoursYes"
                    Grid.Row="6"
                    Grid.Column="9"
                    Grid.ColumnSpan="2"
                    Margin="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Style="{DynamicResource INLabelText2}"
                    Text="R Batch"
                    Visibility="Hidden" />
                <RadioButton
                    x:Name="rbIsRedeemedNo"
                    Grid.Row="6"
                    Grid.Column="8"
                    Margin="0,0,0,2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    GroupName="rbgRedeemedGiftHours"
                    IsChecked="False"
                    Style="{StaticResource INRadioButton}"
                    Visibility="Hidden" />
                <TextBlock
                    x:Name="lblIsRedeemedHoursNo"
                    Grid.Row="6"
                    Grid.Column="9"
                    Grid.ColumnSpan="2"
                    Margin="0,7,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Style="{DynamicResource INLabelText2}"
                    Text="N/R Batch"
                    Visibility="Hidden" />

                <RadioButton
                    x:Name="rbIsRedeemedNeither"
                    Grid.Row="7"
                    Grid.Column="8"
                    Margin="0,0,0,18"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    GroupName="rbgRedeemedGiftHours"
                    IsChecked="True"
                    Style="{StaticResource INRadioButton}"
                    Visibility="Hidden" />
                <TextBlock
                    x:Name="lblIsRedeemedHoursNeither"
                    Grid.Row="7"
                    Grid.Column="9"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,16"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Style="{DynamicResource INLabelText2}"
                    Text="Default"
                    Visibility="Hidden" />

                <!--<CheckBox x:Name="chkIsRedeemedHours"
                          Style="{DynamicResource INCheckboxStyle}"
                          TabIndex="0"
                          Grid.Column="11"
                          Grid.Row="6"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Top"
                          Visibility="Visible"
                          IsEnabled="True"
                          Margin="0,7,0,0"
                          Height="16"
                          Width="16" />-->


                <Border
                    Grid.Row="2"
                    Grid.RowSpan="5"
                    Grid.Column="13"
                    Grid.ColumnSpan="10"
                    Margin="-6,0,0,0"
                    Background="GhostWhite"
                    BorderBrush="Gray"
                    BorderThickness="2"
                    CornerRadius="4">
                    <DataGrid
                        x:Name="dgAgentTimes"
                        Margin="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AutoGeneratingColumn="dgAgentTimes_AutoGeneratingColumn"
                        BorderThickness="0"
                        IsReadOnly="True"
                        MouseDoubleClick="dgAgentTimes_MouseDoubleClick">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Click="MenuItem_Click" Header="Remove Time">
                                    <MenuItem.Icon>
                                        <Image
                                            Width="12"
                                            Height="12"
                                            Source="pack://application:,,,/Resources/imageError.png" />
                                    </MenuItem.Icon>
                                </MenuItem>

                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </Border>



                <Image
                    Name="imgEditMode"
                    Grid.Row="7"
                    Grid.RowSpan="2"
                    Grid.Column="13"
                    Grid.ColumnSpan="2"
                    Source="pack://application:,,,/Resources/pencil.png"
                    Stretch="Fill"
                    Visibility="Collapsed" />

            </Grid>
        </Viewbox>
    </Canvas>

</src:BaseControl>